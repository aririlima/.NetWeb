@model IEnumerable<Arianna_Lima_av1.Models.Produto>

<table class="table table-bordered table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estoque)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estoque)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.ProdutoId }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.ProdutoId }) |
                @Html.ActionLink("Apagar", "Apagar", new { id = item.ProdutoId })
            </td>
        </tr>
    }

</table>